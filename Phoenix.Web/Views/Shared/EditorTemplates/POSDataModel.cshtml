@model Phoenix.Web.Models.POSDataModel

@using (Html.BeginForm("SavePOSItem", "DataMap", FormMethod.Post, new { id = "newPOSItemForm", Class = "form-horizontal" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-10" style="text-align:center">
                <div id="operationStatus" class="statusdiv"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10">
                @Html.HiddenFor(x => x.NetworkObjectId, 0)
                @Html.HiddenFor(x => x.POSDataId, 0)
                @Html.Hidden("Index", -1)
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("POS Name", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(x => x.POSItemName, string.Empty, new { Class = "k-input k-textbox" })
                                @Html.ValidationMessageFor(x => x.POSItemName)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("Menu Item Name", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(x => x.MenuItemName, string.Empty, new { Class = "k-input k-textbox" })
                                @Html.ValidationMessageFor(x => x.MenuItemName)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("PLU", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(x => x.PLU, string.Empty, new { Class = "k-input k-textbox" })
                                @Html.ValidationMessageFor(x => x.PLU)
                            </div>
                        </div>
                    </div>
                </div><div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("Alternate ID", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(x => x.AlternatePLU, string.Empty, new { Class = "k-input k-textbox" })
                                @Html.ValidationMessageFor(x => x.AlternatePLU)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("Price", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.TextBoxFor(x => x.BasePrice, string.Empty, new { Class = "k-input k-textbox" })
                                @Html.ValidationMessageFor(x => x.BasePrice)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("Options", new { Class = "control-label col-xs-3" })
                            <div class="col-xs-6">
                                @Html.CheckBoxFor(x => x.IsAlcohol, false) Is Alcohol
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12" style="text-align:center;">
                        <br />
                        <a id="btnPOSItemSave" class="btn btn-info btn-sm savefunctionalbtn"><i class="glyphicon glyphicon-ok"></i>&nbsp;Save</a>
                        &nbsp;&nbsp;<a id="btnPOSItemCancel" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-remove"></i>&nbsp;Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}