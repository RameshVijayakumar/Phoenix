@{
    ViewBag.Title = "Site Actions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <!--Sidebar content-->
            <h4>
                Sites@*<div class="pull-right">
                    <a class="btn btn-default btn-xs pull-right" id="btnClearTreeViewSelection" href="#">Clear</a>
                </div>*@
            </h4>
            <div id="treeView" style="overflow-y: auto; font-size: 75%;" class="resizable-tree"></div>
        </div>
        <div class="col-xs-9">

            <div id="divMenuSync" class="active">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><b>Menu Sync</b>
                        <span class="text-warning" id="AddTargetMsg"></span>
                        @if (User.IsInRole("Administrator") || User.IsInRole("SuperAdministrator") || User.IsInRole("Editor"))
                        {
                            <a class="btn btn-default btn-sm pull-right btn-primary savefunctionalbtn" id="btnMenuSync" data-loading-text="Syncing..."><i class='glyphicon glyphicon-white glyphicon-ok'></i>&nbsp;Menu Sync</a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div id="gridSyncTarget" style="font-size: 75%;" class="resizable-grid active" data-grid-height-offset-top="10"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h4>Sync History
                        @if (User.IsInRole("Administrator") || User.IsInRole("SuperAdministrator") || User.IsInRole("Editor"))
                        {
                            <a class="btn btn-default btn-sm pull-right  savefunctionalbtn" id="btnDeleteSyncHistroy" data-loading-text="Deleting..."><i class='glyphicon glyphicon-remove'></i>&nbsp;Delete Sync History</a>
                        }
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div id="gridSyncTargetDetail" style="font-size: 75%;" class="resizable-grid active" data-grid-height-offset-top="10"></div>
                    </div>
                </div>
            </div>

            @*<div class="tabbable tabs-top" id="tbItem">
